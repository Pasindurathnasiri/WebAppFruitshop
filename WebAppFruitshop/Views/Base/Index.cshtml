        text-align:center;
        padding: 0 !important;
    }

    .modal:before{
        content:'';
        display: inline-block;
        height:100%;
        vertical-align: middle;
        margin-right: -4px;
    }

    .modal-dialog{
        display: inline-block;
        text-align:left;
        vertical-align:middle;
    }

    fieldset{
        border: 1px solid #ddd !important;
        margin:0;
        xmin-width:0;
        padding:0;
        position:0;
        border-radius:4px;
        background-color:rgba(107, 186, 245, 0.80);
        padding-left:10px !important;

    }

    legend{
        font-size:30px;
        font-weight:bold;
        margin-bottom:0px;
        width:40%;
        border: 1px solid #ddd;
        border-radius:4px;
        padding:5px 5px 5px 10px;
        background-color:antiquewhite;
    }
